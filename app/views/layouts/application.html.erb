<!DOCTYPE html>
<html>
  <head>   
    <%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body >
    <script>

$(document).ready(function() { 
  $.ajax('/portal/recent_act');
   setInterval(function () { 
         $.ajax('/portal/recent_act');
       } , 5000);          
}); 
    </script>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container" width:500px >
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", portal_index_path %></li>
            <% if current_member %>
            <li><%= link_to "Sign out", destroy_member_session_path, :method => :delete %></li>
            <% else %>
            <li><%= link_to "Sign in ", new_member_session_path, :method => :get %></li>
            <%end%>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container" style="margin-top:80px">
      <%= yield %>
    </div>
    <footer>
    	end page
    </footer>
  </body>
</html>